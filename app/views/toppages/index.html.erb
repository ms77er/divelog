          <% unless logged_in? %>
            <%= link_to 'Log In', login_path, class: 'btn btn-success btn-lg' %>
          <% end %>
      </div>
    </div>
  </div>
<% end %>
    <div align="center">
    <div style="float:left" class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
